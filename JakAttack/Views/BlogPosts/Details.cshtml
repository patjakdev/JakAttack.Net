@model JakAttack.Models.BlogPost

@{
    ViewBag.Title = String.Format("Blog - {0}", Html.Encode(Model.Title));
    ViewBag.SectionTitle = "blog";
}

<article class="blogPost">
    <header>
        <h1>@Html.ActionLink(Model.Title, "Details", new { id = Model.BlogPostId })</h1>
        <div>By: Test User</div>
        <div id="timestamps">
        <div>Posted: <time pubdate datetime="@Model.DatePosted.ToString("u")">@Model.DatePosted.ToString("u")</time></div>
            @if (Model.DatePosted.CompareTo(Model.DateLastModified) != 0)
            {
                <div>Modified: <time pubdate datetime="@Model.DateLastModified.ToString("u")">@Model.DateLastModified.ToString("u")</time></div>
            }
        </div>
    </header>
    @Model.Content
</article>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.BlogPostId }) |
    @Html.ActionLink("Back to List", "Index")
</p>


